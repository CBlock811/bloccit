<%= form_for [topic, post, comment], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter comment" %><br>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>